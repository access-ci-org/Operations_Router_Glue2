[Unit]
Description=Information Services GLUE2 Router 
After=network.target remote-fs.target nss-lookup.target

[Service]
Type=simple
EnvironmentFile=/soft/warehouse-apps-1.0/router-glue2/PROD/sbin/route_glue2.sysconfig
ExecStart=/soft/warehouse-apps-1.0/router-glue2/PROD/sbin/route_glue2.service.sh start
User=software
Group=admin
Restart=always

[Install]
WantedBy=multi-user.target
